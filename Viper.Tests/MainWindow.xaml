        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="TestingMainGrid" Background="Black">
        <StackPanel x:Name="TestingSpacesButtons" HorizontalAlignment="Left" Width="200" Background="#FF292929"/>
        <Grid x:Name="TestingSpace" Margin="375,15,15,15" Background="#FF0A0A0A"/>
        <StackPanel x:Name="TestingInteractions" HorizontalAlignment="Left" Width="160" Background="#FF191919" Margin="200,0,0,0"/>

    </Grid>
</Window>
