<UserControl x:Name="CheckBoxControl" x:Class="Viper.Game.Controls.Individual.BaseCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Viper.Game.Controls.Individual"
             mc:Ignorable="d" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand">
    <Grid x:Name="CheckBoxGrid" ClipToBounds="True" Background="#FFD0D0D0">
        <Rectangle x:Name="Blackout" Stroke="#00000000" Fill="Black" StrokeThickness="0" Panel.ZIndex="1" IsHitTestVisible="False" Opacity="0"/>
        <Border x:Name="CheckBoxBorder" BorderBrush="#FF6B6B6B" BorderThickness="1" Background="#00000000"/>
        <Grid x:Name="ContentCheckContainer" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Rectangle x:Name="Check" HorizontalAlignment="Left" Height="15" Stroke="#FF2F2F2F" VerticalAlignment="Top" Width="15" Fill="#FF7D7D7D" StrokeThickness="2" Margin="5,5,5,5"/>
            <ContentControl x:Name="CheckBoxContent" Content="ViperCheckBox" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="True" Margin="25,5,10,5"/>
        </Grid>
    </Grid>
</UserControl>
