<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Viper.Game.Controls" mc:Ignorable="d" x:Class="Viper.Game.Controls.ViperComboBox" VerticalAlignment="Top" x:Name="ComboBoxControl" HorizontalAlignment="Left">
    <Grid x:Name="RootGrid" VerticalAlignment="Top" HorizontalAlignment="Left" Height="NaN" Width="NaN">
        <Rectangle Panel.ZIndex="1" StrokeThickness="0" Stroke="#00000000" Opacity="0" x:Name="Blackout" IsHitTestVisible="False" Fill="Black"/>
        <Border x:Name="ComboBoxBorder" BorderThickness="1" Panel.ZIndex="2" BorderBrush="#FF505050"/>
        <StackPanel x:Name="ComboBoxContainerStackPanel" RenderTransformOrigin="0.5,0.5" Background="#FF171717" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid x:Name="ComboBoxStuffGrid" ClipToBounds="True" Background="#00FF1515" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand">
                <Grid x:Name="ComboBoxContentContainer" Margin="10,5,10,5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="NaN">
                    <ContentControl VerticalContentAlignment="Center" UseLayoutRounding="True" x:Name="ComboBoxContent" HorizontalContentAlignment="Center" Foreground="White" Content="ViperComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand" Margin="20,0,0,0"/>
                    <Rectangle x:Name="SillyThing" HorizontalAlignment="Left" Height="11" VerticalAlignment="Center" Width="11" RenderTransformOrigin="0.5,0.5" Stroke="#66FFFFFF" RadiusX="1.931" RadiusY="1.931">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform Angle="48" CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFB5B5B5" Offset="0.5"/>
                                <GradientStop Color="#FF404040" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Grid>
            <StackPanel x:Name="ItemContainer" Height="0" Background="#FF0C0C0C" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</UserControl>