<UserControl x:Name="ControlContainer" x:Class="Viper.Game.Controls.Panels.SearchableGroupBoxStackPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Viper.Game.Controls.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="RootGrid">

        <Border x:Name="ControlBorder" BorderBrush="Black" BorderThickness="1"/>
        <StackPanel x:Name="ElementStackPanel"/>
        <Grid x:Name="TitleElements" VerticalAlignment="Top">
            <StackPanel x:Name="TitleStackPanel" VerticalAlignment="Top" Background="#FF980000"/>
        </Grid>

    </Grid>
</UserControl>
